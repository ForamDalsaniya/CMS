@model IEnumerable<Cab>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card-group">
        @foreach (var cab in Model)
        {
            @if (cab.isRegister == true && cab.DriverId == ViewBag.Id)
            {
                var photoPath = "~/images/" + (cab.PhotoPath ?? "Barbaadiyan.jpg");
                <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
                    <img src="@photoPath" class="card-img-top imageThumbnail" asp-append-version="true">
                    <div class="card-body">
                        <h5 class="card-title">@cab.CabModel</h5>
                        <p class="card-text">NumberPlate: @cab.numberPlate</p>
                        <p class="card-text">Register By: @cab.registerBy</p>
                        <p class="card-text">Register Date: @cab.registerDate</p>
                        <p class="card-text">Address: @cab.registerAddress</p>
                    </div>
                    <div class="card-footer">
                        @*<form asp-controller="home" asp-action="book" method="post">*@
                        <a asp-controller="home" asp-action="Confirm" asp-route-id="@cab.CarId" type="submit" class="btn btn-primary m-1">Go For Service</a>
                        @* </form>*@
                        <a asp-action="CabIndex" asp-controller="home" class="btn btn-primary m-1">Back</a>
                        @*<a href="#" class="btn btn-danger m-1">Delete</a>*@
                    </div>
                </div>

            }

        }

    </div>
   
</div>
